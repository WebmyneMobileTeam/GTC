<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhruvil.geleza_teacherconsole.Application.MainActivity">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <FrameLayout
        android:id="@+id/actionStrip"
        android:background="@color/app_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_strip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="-16dp"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/geleza_logo"
                android:layout_gravity="left|center_vertical"
                android:scaleType="centerInside" />

            <EditText
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_action_search"
                android:layout_gravity="center_vertical"
                android:background="@drawable/rounded_ltgrey"
                android:layout_marginLeft="32dp"
                android:layout_width="@dimen/login_button_size"
                android:layout_height="match_parent"
                android:hint="Search here..."
                android:textSize="@dimen/normal_text"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/app_color"
                android:textColorHint="@color/app_color"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
   </FrameLayout>

        <!--second strip-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_strip"
            android:background="@color/geleza_dark_grey">

            <LinearLayout
                android:id="@+id/spinnerOne"
                android:layout_marginLeft="48dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSpinnerOne"
                    android:text="Class/Grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="22sp" />


                <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:editable="false"
                    android:focusable="false"
                    style="@style/SpinnerAsEditText"
                    android:id="@+id/sp1"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#fff"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:text="All Year"
                    android:spinnerMode="dropdown"
                    android:popupBackground="@color/light_green"
                    android:entries="@array/year_array"
                    />


                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hardware_keyboard_arrow_down"
                    android:scaleType="centerInside" />


            </FrameLayout>\
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spinnerTwo"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSpinnerTwo"
                android:text="Class/Grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="22sp" />


            <FrameLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:layout_marginLeft="16dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:editable="false"
                    android:focusable="false"
                    style="@style/SpinnerAsEditText"
                    android:textColor="#fff"
                    android:id="@+id/sp2"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:text="Physics"
                    android:popupBackground="@color/light_green"
                    android:entries="@array/subject_array"
                    />

                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hardware_keyboard_arrow_down"
                    android:scaleType="centerInside" />

            </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spinnerThree"
                android:layout_marginRight="48dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSpinnerThree"
                android:text="Class/Grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="22sp" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/sp3"
                    android:layout_marginLeft="16dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:editable="false"
                    android:focusable="false"
                    style="@style/SpinnerAsEditText"
                    android:textColor="#fff"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:text="Tests"
                    android:popupBackground="@color/light_green"
                    android:entries="@array/homework_array"
                    />



                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hardware_keyboard_arrow_down"
                    android:scaleType="centerInside" />

            </FrameLayout>

            </LinearLayout>



        </FrameLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:id="@+id/linearsideleft"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical">

           </LinearLayout>

           <FrameLayout
               android:background="#fff"
               android:id="@+id/main_container"
               android:layout_width="match_parent"
               android:layout_height="match_parent">


           </FrameLayout>


       </LinearLayout>


   </LinearLayout>


</RelativeLayout>
