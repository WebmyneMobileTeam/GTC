<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"

    android:layout_height="match_parent">

    <!-- Relative layout for displaying image,name,description etc..-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCurrentActivitiesIcon"
            android:contentDescription="@string/app_name"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgCurrentActivitiesIcon"
            android:layout_alignTop="@id/imgCurrentActivitiesIcon"
            >


        <LinearLayout


            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
               android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Young Achievers Comms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#03495C"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView

                    android:layout_marginRight="100dp"
                    android:layout_gravity="right"
                    android:text="12:03 PM, today "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d1d1d1"
                    android:textSize="18sp" />
            </FrameLayout>

            <TextView
                android:text="Congratulations to Sipho Morake for reaching 86% on Mathematics Class Test, thus earning43pointsinsubjecthonours.Well doneand keepItup!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="18sp" />

            <LinearLayout
              android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="145 Applauding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d1d1d1"
                    android:textSize="22sp" />

                <TextView
                    android:layout_marginLeft="56dp"
                    android:text="Join Applause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFC000"
                    android:textSize="22sp" />



            </LinearLayout>



        </LinearLayout>

            <ImageView


                android:layout_gravity="bottom"
                android:contentDescription="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/dotted"
                android:scaleType="centerInside" />


        </FrameLayout>


    </RelativeLayout>



</LinearLayout>